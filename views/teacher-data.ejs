<html>

<head>
  <title>School of Grace Teachers</title>
  <% include ../partials/head %>
    <style>
      table,
      th,
      td {
        border: 1.5px solid black;
        border-collapse: collapse;
      }
    </style>
</head>

<body>

  <header>
    <% include ../partials/header %>
  </header>
  
  <h1 align="center">School of Grace Teachers</h1>
  <br>
  <table class="table" style="width:50%" align="center">
    <tr>
      <th>No.</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Academic subject</th>
    </tr>
    <% for(let i =0; i < dataTeachers.length; i++){ %>
      <tr>
        <td align="center">
          <%- dataTeachers[i].No %>
        </td>
        <td>
          <%- dataTeachers[i].first_name %>
        </td>
        <td>
          <%- dataTeachers[i].last_name %>
        </td>
        <td>
          <%- dataTeachers[i].gender %>
        </td>
        <td>
          <%- dataTeachers[i].academic_subject %>
        </td>
      </tr>
      <% } %>
  </table>

  <footer>
    <% include ../partials/footer.ejs %>
  </footer>

</body>

</html>
